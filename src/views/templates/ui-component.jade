// UI title
div(class="row t_margin-bottom-xs-2")
    div(class="col-xs-6")
        h3(class="t_inline-block t_margin-xs-0 t_margin-right-xs-2") 
            block ui-title
    
    div(class="col-xs-6 text-right")
        span(class="btn btn-default btn-xs t_margin-right-xs-2",copy-snippet,data-clipboard-target="#foo") copy code
        span(class="btn btn-default btn-xs") show code

// Code to copy
div(class="t_hide")   
    block ui-copyCode

div(class="panel panel-default t_padding-bottom-xs-0")      
    div(class="panel-body",id="foo",data-clipboard-text="https://github.com/zenorocha/clipboard.js.git")
        // Demo and test
        block ui-demoTest

    // Code to show
    div(class="panel-footer t_padding-xs-0")
        pre(class="pre-scrollable pre--panel-footer t_padding-vertical-xs-3 t_padding-horizontal-xs-4 t_margin-xs-0")
            code(class="language-xml t_padding-xs-0 t_margin-xs-0")
                block ui-showCode